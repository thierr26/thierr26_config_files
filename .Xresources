! Have XTerm display 256 colors.
XTerm*termName: xterm-256color

! Have XTerm display correctly UTF-8 in title bar.
XTerm*utf8Title: true

! Use Inconsolata font, size 12, in XTerm.
XTerm*faceName: Inconsolata
XTerm*faceSize: 12

! Set word boundaries in XTerm so that full path names or words containing a
! dash (-) are entirely selected on double click.
XTerm*charClass: 0-32:1,33-126:2,127-160:3,161-255:2

! -----------------------------------------------------------------------------

! Have xmessage display UTF-8 encoded messages properly.
xmessage*international: true

! Define xmessage colors.
xmessage.form.okay.background: #202020
xmessage.form.okay.foreground: lightgray
xmessage*background: #202020
xmessage*foreground: lightgray
