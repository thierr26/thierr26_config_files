[user]
	name = <my_name>
	email = <my_email_address>
[push]
	default = simple
	followtags = true
[alias]
	s = status
	d = diff
	g = log --pretty=oneline --abbrev-commit
	a = add
	co = checkout
	ci = commit
	cm = commit -m
	ca = commit -a
	cam = commit -am
	p = push
	graph = log --graph --oneline --all
	release = "!if [ -n \"$1\" ]; then \
	                git tag -a \"v$1\" -m \"Release $1\"; \
	            else \
	                echo \"Empty argument, nothing done\"; \
	            fi; #"
[credential]
	helper = store
[core]
	editor = vim
